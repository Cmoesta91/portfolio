@model GuildCars.Models.Models.Car
@{
    ViewBag.Title = "Contact";
}

<link rel="stylesheet" type="text/css" href="~/CSS/Contact.css" media="screen" />
<div class="row">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "col-md-5" }))
    {
        @Html.ValidationSummary(true)
    <div class="row">
        <h2>Contact Us!</h2>
        <div class="form-group">
            <label>First Name </label>
            <br />
            <input type="text" name="FName" required />
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <br />
            <input type="text" name="LName" required />
        </div>

        <div class="form-group">
            <label>Phone: </label>
            <br />
            <input type="tel" pattern="^\d{3}-\d{3}-\d{4}$" required>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <br />
            <input type="email" name="Email" required />
        </div>

        <div class="form-group">
            <label>Message: </label>
            <br />
            <textarea required>@(Model?.Vin ?? "")</textarea>


        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    }

    <div class="col-md-6" id="addressContainer">
        <div id="mapPic">
            <img src="~/Images/Map.png" />
        </div>
        <div id="address">
            <span>15 S 5th St #600</span>
            <br />
            <span>Minneapolis, MN 55402</span>
            <br />
            <br />
        </div>
        <div id="cantactNumbers">
            <span id="salesText">Sales: </span><span>382-596-8794</span>
            <br />
            <span id="serviceText">Service: </span><span>382-596-8262</span>
        </div>
    </div>

</div>



