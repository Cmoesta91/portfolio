@model GuildCars.ViewModels.CarsSpecials
@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" type="text/css" href="~/CSS/Index.css" media="screen" />



<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        
        <div class="carousel-inner text-center" id="">

            <div class="item active jumbotron" id="HugeSale">
                <a style="text-decoration: none; color: White"  href="http://localhost:61818/Home/Special">
                    <h1>Specials!</h1>
                </a>
            </div>

            @foreach (var special in Model.Specials)
            {

                <div class="item jumbotron" id="HugeSale">
                    <a style="text-decoration: none; color: white" href="http://localhost:61818/Home/Special">
                        <h1>@special.SpecialName</h1>
                    </a>
                </div>

            }


        </div>

        @*Left and right controls*@
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Featured Vehicles</h2>
        @foreach (var car in Model.Cars)
        {
            <div class="featureCars">
                <img src="@car.PicturePath" alt="carImage" />
                <span id="carYear">@car.CarYear</span>
                <span id="carMake">@car.Make.MakeName</span>
                <span id="carModel">@car.Model.ModelName</span>
                <span id="carPrice">$@car.SalePrice</span>
            </div>
            <div>@Html.ActionLink("See Details!", "Details", "Inventory", new { id = car.CarID }, new { @class = "details" })</div>
            <br />
            <br />
        }
    </div>
</div>

@section scripts {
    <script src="~/Content/SearchHandler.js"></script>
}
