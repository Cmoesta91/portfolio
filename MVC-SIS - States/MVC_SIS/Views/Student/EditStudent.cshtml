@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12">
        <h3>EdIt StUdEnT</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Student.StudentId)
        <div class="form-group">
            <label>FiRsT nAmE</label>
            @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", placeholder = "fIrStNaMe" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.FirstName)</span>
        </div>
        <div class="form-group">
            <label>LaSt nAmE</label>
            @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", placeholder = "lAsT NaMe" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.LastName)</span>
        </div>
        <div class="form-group">
            <label>GpA</label>
            @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", placeholder = "gPa" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.GPA)</span>
        </div>
            <div class="form-group">
                <label>Major:</label>
                @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>sTrEeT oNe</label>
                @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control", placeholder = "StReEt OnE" })
            </div>
            <div class="form-group">
                <label>sTrEeT tWo</label>
                @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", placeholder = "StReEt TwO" })
            </div>
            <div class="form-group">
                <label>cItY</label>
                @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", placeholder = "CiTy" })
            </div>
            <div class="form-group">
                <label>StAtE:</label>
                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>PoStAl CoDe</label>
                @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control", placeholder = "pOsTaL cOdE" })
            </div>

            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>